<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

        <ScrollView
          android:layout_margin="10dp"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <DatePicker
                    android:datePickerMode="calendar"
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarViewShown="false"
                    android:spinnersShown="true" />

                <Button
                    android:padding="5dp"
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/clickpress"
                    android:gravity="center"
                    android:text="Select Date" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Select Date : "
                    android:textColor="@color/red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textColor="@color/red"
                    android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:padding="10dp"
                            android:id="@+id/in_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="InTime"
                            android:textColor="@color/red" />

                        <Button
                            android:id="@+id/btn_intime"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/clickpress"
                            android:text="Start TIME" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_outime"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:padding="10dp"
                            android:id="@+id/out_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="OutTime"
                            android:textColor="@color/red" />

                        <Button
                            android:id="@+id/btn_outtime"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/clickpress"
                            android:text="Stop TIME" />

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:padding="10dp"
                    android:id="@+id/write_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boder"
                    android:ems="10"
                    android:hint="Write a Comment"
                    android:lines="5"
                    android:textAppearance="?android:attr/textAppearanceSmall"></EditText>

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clickpress"
                    android:gravity="center"
                    android:text="Save" />
            </LinearLayout>
        </ScrollView>




</RelativeLayout>