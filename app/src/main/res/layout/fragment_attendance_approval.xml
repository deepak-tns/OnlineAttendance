<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AttendanceApprovalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Select Year">

            </TextView>

            <Spinner
                android:id="@+id/spi_leavrtransactrion_year"
                android:background="@drawable/spinner_bg"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Select Month">

            </TextView>

            <Spinner
                android:id="@+id/spi_leavrtransactrion_month"
                android:background="@drawable/spinner_bg"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>


        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_cordinator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Approved as Cordinator" />

            <RadioButton
                android:id="@+id/rb_project_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved as Project Manager" />

            <RadioButton
                android:id="@+id/rb_project_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved as Project Head" />

        </RadioGroup>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:background="@color/lightgreen"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textStyle="bold"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/white"
                android:visibility="visible"
                android:layout_weight=".5"
                android:text="SNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="EmpID"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="Coordinator Appoval"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="Manager Approval"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/smallTextSize"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Head Approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <ListView
            android:id="@+id/listview_attandence_approval"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>


    </LinearLayout>

</FrameLayout>